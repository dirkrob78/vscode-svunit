{
	"name": "svunit",
	"displayName": "SVUnit",
	"description": "Run SVUnit tests from VSCode test explorer",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"private": true,
	"license": "MIT",
	"repository": "",
	"engines": {
		"vscode": "^1.88.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:*_unit_test.sv"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.88.0",
		"eslint": "^9.13.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"contributes": {
		"configuration": {
			"properties": {
				"svunit.setupCommand": {
					"type": "string",
					"default": "cd ~/svunit-master; source Setup.zsh",
					"description": "Setup command"
				},
				"svunit.runCommand": {
					"type": "string",
					"default": "runSVUnit -s verilator -c '../usleep_wrapper.c --autoflush -Wno-lint' -o out",
					"description": "Run command"
				}
			}
		}
	},
	"dependencies": {
		"shell-quote": "^1.8.2"
	}
}
